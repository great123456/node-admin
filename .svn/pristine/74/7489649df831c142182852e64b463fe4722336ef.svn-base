    <script>

        function uploadFile(id){
            $("#errorMsg").html("");
            var formData = new FormData($(id)[0]);
            $.ajax({
                url: 'http://admin.emomo.cc/util/excel/device/upload',
                type: 'POST',
                cache: false,
                data: new FormData($(id)[0]),
                processData: false,
                contentType: false
            }).done(function(res) {
               console.log(res);
                if(res.code == "0"){

                    var dat = res.data;
                    var data = JSON.parse(dat);

                    if(data.code == "0"){
                        $("#errorMsg").html("设备信息导入成功");

                        setTimeout(function () {
                            window.location.href = "/device/page";
                        }, 2000);
                    }else{
                        $("#errorMsg").html("设备号存在冲突,请检查是否已经导入");
                    }

                }else {
                    $("#errorMsg").html("上传异常,文件格式有误");
                }
            }).fail(function(res) {
                $("#errorMsg").html("上传异常,文件格式有误");
            });


        };



    </script>


