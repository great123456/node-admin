                G("altitude").value  = altitude;
                G("longitude").value = longitude;

                geoc.getLocation(e.point,function(rs){
                    //console.log(rs);
                    var addComp = rs.addressComponents;
                    G("cityName").value = addComp.province
                            + addComp.city
                            + addComp.district
                            + addComp.street
                            + addComp.streetNumber;
                    G("city").value = addComp.city;
                });

            });
            map.addOverlay(marker);


            var infoWindow;
            marker.addEventListener("click", function () {
                var cityName = G("cityName").value;
                var content = cityName + "<br/><br/>经度："
                        + longitude
                        + "<br/>纬度："
                        + altitude;
                infoWindow = new BMap.InfoWindow("<p style='font-size:14px;'>" + content + "</p>");
                this.openInfoWindow(infoWindow);
            });
            marker.setAnimation(BMAP_ANIMATION_BOUNCE); //跳动的动画
            setTimeout(function () {
                marker.setAnimation(null); //取消动画
            }, 2000);



        });
        localSearch.search(keyword);
    }

    //鼠标放在下拉列表上的事件
    ac.addEventListener("onhighlight", function(e) {
        var str    = "";
        var _value = e.fromitem.value;
        var value  = "";
        if (e.fromitem.index > -1) {
            value  = _value.province
                    +  _value.city
                    +  _value.district
                    +  _value.street
                    +  _value.business;
        }
        str = "FromItem<br />index = "
                + e.fromitem.index
                + "<br />value = "
                + value;

        value = "";
        if (e.toitem.index > -1) {
            _value = e.toitem.value;
            value = _value.province
                    +  _value.city
                    +  _value.district
                    +  _value.street
                    +  _value.business;
        }
        str += "<br />ToItem<br />index = "
                + e.toitem.index
                + "<br />value = "
                + value;
        G("searchResultPanel").innerHTML = str;
    });

    var myValue;
    //鼠标点击下拉列表后的事件
    ac.addEventListener("onconfirm", function(e) {
        var _value = e.item.value;
        myValue = _value.province
                +  _value.city
                +  _value.district
                +  _value.street
                +  _value.business;
        G("searchResultPanel").innerHTML = "onconfirm<br />index = "
                + e.item.index
                + "<br />myValue = "
                + myValue;
        theLocation();
    });
</script> 
