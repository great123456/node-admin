           datacode.province=$(this).find("option:selected").attr('data-code');
           datacode.provincename=$(this).find("option:selected").attr('value');
           datacode.city=$("#city1").find("option:selected").attr('data-code');
           datacode.cityname=$("#city1").find("option:selected").attr('value');
           datacode.district=$("#district1").find("option:selected").attr('data-code');
           datacode.districtname=$("#district1").find("option:selected").attr('value');
             console.log(datacode); 
        });
        $("#city1").click(function(){
           datacode.province=$("#province1").find("option:selected").attr('data-code');
           datacode.provincename=$("#province1").find("option:selected").attr('value');
           datacode.city=$(this).find("option:selected").attr('data-code');
           datacode.cityname=$(this).find("option:selected").attr('value');
           datacode.district=$("#district1").find("option:selected").attr('data-code');
           datacode.districtname=$("#district1").find("option:selected").attr('value');
             console.log(datacode); 
        });
        $("#district1").click(function(){
          datacode.province=$("#province1").find("option:selected").attr('data-code');
          datacode.provincename=$("#province1").find("option:selected").attr('value');
         datacode.city=$("#city1").find("option:selected").attr('data-code');
         datacode.cityname=$("#city1").find("option:selected").attr('value');
          datacode.district=$(this).find("option:selected").attr('data-code');
          datacode.districtname=$(this).find("option:selected").attr('value');
           console.log(datacode);       
        });
       
       console.log(datacode);


    function G(id) {
        return document.getElementById(id);
    }
    var selectCity ;
     
    
    var showArea = function(){
      selectCity =datacode.provincename+''+datacode.cityname+''+datacode.districtname;
    };

    G('province1').setAttribute('onchange','showArea()');
    
    var longitude = 116.331398;
    var altitude  = 39.897445;
    // 百度地图API功能
    var map = new BMap.Map("allmap");
    var point = new BMap.Point(longitude,altitude);
    map.centerAndZoom(point,15);
    var geoc = new BMap.Geocoder();

    setTimeout(function(){
        map.setZoom(15);
    }, 2000);  //2秒后放大到14级
    map.enableScrollWheelZoom(true);//允许缩放


    var localSearch = new BMap.LocalSearch(map);
    localSearch.enableAutoViewport(); //允许自动调节窗体大小


    //查询结果
    function theLocation(){

        if (selectCity == '' || selectCity == undefined) {
            alert('请输入城市名');
            return;
        }

        if(G("cityName").value == ""){
            alert('请输入详细地址');
            return;
        }

        var city = selectCity + G("cityName").value;
        alert(selectCity);
        //搜索
        var keyword = city;
        localSearch.setSearchCompleteCallback(function (searchResult) {

            var poi = searchResult.getPoi(0);

            longitude = poi.point.lng;
            altitude  = poi.point.lat;
            city      = poi.city;
            G("altitude").value  = altitude;
            G("longitude").value = longitude;
            G("city").value      = city;
            map.centerAndZoom(poi.point, 18);

            map.clearOverlays();
            // 创建标注，为要查询的地址对应的经纬度
            var marker = new BMap.Marker(new BMap.Point(poi.point.lng, poi.point.lat));
            marker.enableDragging();//可拖拽
            //将结果进行拼接并显示到对应的容器内
            marker.addEventListener("dragend", function(e){
                longitude = e.point.lng;
                altitude  = e.point.lat;
                G("altitude").value  = altitude;
                G("longitude").value = longitude;

                geoc.getLocation(e.point,function(rs){
                    //console.log(rs);
                    var addComp = rs.addressComponents;
                    G("city").value = addComp.city;
                });

            });
            map.addOverlay(marker);


            var infoWindow;
            marker.addEventListener("click", function () {
                var cityName = G("cityName").value;
                var content = cityName + "<br/><br/>经度："
                        + longitude
                        + "<br/>纬度："
                        + altitude;
                infoWindow = new BMap.InfoWindow("<p style='font-size:14px;'>" + content + "</p>");
                this.openInfoWindow(infoWindow);
            });
            marker.setAnimation(BMAP_ANIMATION_BOUNCE); //跳动的动画
            setTimeout(function () {
                marker.setAnimation(null); //取消动画
            }, 2000);



        });
        localSearch.search(keyword);
    }
</script> 


