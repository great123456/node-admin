<%include component/head.ejs %>
<link rel="stylesheet" href="/layui/css/layui.css">

<style type="text/css">
.su-main{
	overflow: hidden;
	padding: 20px 0 0 40px;
	font-size: 16px;
}
.su-a{
	margin: 15px 20px 15px 0;
	clear: both;
	overflow-x: hidden;
}

.su-div1 > div{
	float: left;
}
.su-div1 > div:nth-child(1){
	width: 80px;
}
.su-div1 > div > span{
	color: red;
}
.su-div1 > div > input{
	margin: 0 10px;
}
.su-div1 > div > button{
	margin: 0 10px;
}
.su-div1 > div > div{
	margin: 5px 10px;
}
.su-div1:nth-child(2){
	line-height: 34px;
	height: 34px;

}
.su-div1 > div > select{
	margin: 0 10px;
}
#submit{
	
}
.details > div:nth-child(1){
	float: left;
	line-height: 42px;
	height: 42px;
}
.details > div:nth-child(1) > span:nth-child(2){
	padding-left: 5px;
	border-left: 4px solid rgb(67, 142, 185);
}
.details > div:nth-child(2){
	float: right;
	margin-right: 20px;
}
.details > div:nth-child(2) > span{
	padding-right: 20px;
}

</style>
<div class="main-content">
	<div class="breadcrumbs" id="breadcrumbs" style="overflow: hidden;">
		<ul class="breadcrumb">
			<li> <i class="ace-icon fa fa-home home-icon"></i>
				<a href="#">运营数据</a>
			</li>
			<li class="active">日报表</li>
		</ul>
	</div>


	<div class="su-main">

		<form action="/operation/day" method="post" id="searchForm">

		<div class="su-div1 su-a">
			<div>
				<span>*</span>选择日期
			</div>
			<div>
				<input id="today" name="today" value="<%=today%>">
				<input id="currentPage" name="currentPage" type="hidden" value="<%=currentPage%>"/>
			</div>
		</div>
		
		<div class="su-div1 su-a">
			<div>
				<span>&nbsp;</span>选择场所
			</div>
			<div>
				<select class="form-control"  name="regionName">
					<option value="">所有场所</option>
				</select>
			</div>
		</div>

		<div class="su-div1 su-a">
			<div>&nbsp;</div>
			<div>
				<button type="submit" class="btn btn-primary">查询</button>
			</div>
		</div>
		</form>
		<div class="details su-a">
			<div>
				<span>&nbsp;</span>
				<span>报表明细</span>
			</div>


			<div style="margin-bottom: 10px;">
				<span style="padding-right: 20px;">下载资金流水:</span>

				<form action="http://admin.emomo.cc/util/export/dayOrderReport.xls" method="post" onsubmit="return getxls()">
					<input type="hidden" name="userPhone" value="<%=userPhone%>">
					<input type="hidden" name="today" id="xlsendDate">
					<input type="hidden" name="orderType" id="xlsorderType">
					<button type="submit" class="btn btn-primary">导出excel表格式
					</button>
				</form>

			</div>	

		<div class="su-a">
			<table class="table table-striped table-bordered table-hover">
				<thead>
					<tr>
						<th>序号</th>
						<th>场所名称</th>
						<th>订单数(单)</th>
						<th>每单均价(元)</th>
						<th>总金额(元)</th>
					</tr>
				</thead>
				<tbody>

					<%for(var i = 0 ; i <data.length ; i++){%>
						<tr>
							<td class="center"><%=i + 1%></td>
							<td class="center"><%=data[i].region%></td>
							<td class="center"><%=data[i].orderCount%></td>
							<td class="center"><%=data[i].orderAvgAmount%></td>
							<td class="center"><%=data[i].orderSumAmount%></td>
						</tr>

					<%}%>
				</tbody>
			</table>	
		</div>
		<div id="demo1" style="text-align: center;"></div>
	</div><!-- ./su-main -->
</div>
<%include component/footer.ejs %> 
<script src="/layui/layui.js"></script>
<script>
layui.use(['layer','laydate','laypage'], function(){
  	var laydate = layui.laydate;
  	var layer = layui.layer;
  	var laypage = layui.laypage;
  
	var start = {
		max: laydate.now(),
		istoday: false,
	};

	document.getElementById('today').onclick = function(){
		start.elem = this;
		laydate(start);
	}
	var currPage = <%= currentPage%> ;	
	laypage({
    	cont: 'demo1'
    	,pages: <%=totalPages%> 
    	,groups: 5
    	,curr: currPage
    	,skin: '#428bca'
    	,jump: function(obj, first){
      		if(!first){
        		$("#currentPage").val(obj.curr);
        		$('#searchForm').submit();                
                layer.msg('第'+ obj.curr +'页');
      		}
    	}	
  	});		

});
function getxls() {
 
	var endDate = $('#today').val();
	var orderType = 2;


	$('#xlsendDate').val(endDate);
	$('#xlsorderType').val(orderType);
	
	return true;
}

</script>
