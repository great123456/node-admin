
    <%include component/head.ejs %>


    <!-- /section:basics/sidebar -->
    <div class="main-content">
        <!-- #section:basics/content.breadcrumbs -->
        <div class="breadcrumbs" id="breadcrumbs">
            <script type="text/javascript">
                try{ace.settings.check('breadcrumbs' , 'fixed')}catch(e){}
            </script>

            <ul class="breadcrumb">
                <li>
                    <i class="ace-icon fa fa-home home-icon"></i>
                    <a href="#">账户管理</a>
                </li>
                <li class="active">平台管理员管理</li>
            </ul><!-- /.breadcrumb -->

        </div>

        <!-- /section:basics/content.breadcrumbs -->
        <div class="page-content">

            <!-- /section:settings.box -->
            <div class="page-content-area">
<!--                <div class="page-header">

                </div>&lt;!&ndash; /.page-header &ndash;&gt;-->

                <div class="row">
                        <div class="col-xs-12">


<!--
                            <div class="table-header col-xs-12">
                                tablea-header
                            </div>
-->

                            <div class="widget-box">

                                <div class="widget-body">
                                    <div class="widget-main">
                                        <form class="form-search" action="/super/platfrom" id="searchForm">
                                            <input type="hidden" id="currentPage" name="currentPage" value="<%= data.keywords.currentPage %>">
                                        </form>
                                         <span class="input-group-btn">
                                             <button type="button" id="addButton" class="btn btn-purple btn-sm" style="margin-left: 5px;" onclick="window.location.href = '/super/platfrom/add'">
                                                添加
                                                 <i class="ace-icon fa glyphicon-plus icon-on-right bigger-110"></i>
                                             </button>
                                         </span>
                                    </div>
                                </div>
                            </div>
                                <table id="sample-table-1" class="table table-striped table-bordered table-hover">
                                <thead>
                                <tr>
                                    <th>登录名</th>
                                    <th>手机号码</th>
                                    <th>总设备数</th>
                                    <th>设备总盈利(元)</th>
                                </tr>
                                </thead>

                                <tbody>
                                <% data.list.forEach(function(info){ %>
                                    <tr>
                                        <td class="center"><%= info.loginName %></td>
                                        <td class="center"> <%= (info.phone) %> </td>
                                        <td class="center"> <%= info.allDevice %> </td>
                                        <td class="center"> <%= info.allPay %> </td>
                                    </tr>
                                <% })%>

                                </tbody>
                            </table>


                            <div align="center" id="tablePageButton"/>

                        </div><!-- /.span -->





                </div><!-- /.row -->
            </div><!-- /.page-content-area -->
        </div><!-- /.page-content -->
    </div><!-- /.main-content -->


    <script>
        var totalPage = <%= data.totalPages %>;
        var currPage = <%= data.currentPage%> ;
    //调用分页
    laypage({
        cont: 'tablePageButton',
        pages: totalPage,
        curr: currPage,
        jump: function(obj, first){ //触发分页后的回调
            if(!first){ //点击跳页触发函数自身，并传递当前页：obj.curr
                $("#currentPage").val(obj.curr);
                $("#searchForm").submit();
            }
        }
    });

    </script>
